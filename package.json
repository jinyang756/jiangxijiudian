{
  "name": "jiangxi-hotel-menu",
  "version": "1.0.0",
  "description": "江西酒店智能菜单系统 - 前端展示页面与后台管理面板",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:config": "npx tsx test-config.ts",
    "test:db": "npx tsx test-db-connection.ts",
    "verify-setup": "npx tsx verify-setup.ts",
    "sync-menu-data": "node scripts/sync-menu-data.js",
    "final-data-init": "node scripts/final-data-init.js",
    "deploy": "node scripts/deploy-vercel.js",
    "deploy:vercel": "node scripts/deploy-vercel.js",
    "deploy:admin": "cd admin-panel && vercel",
    "verify-menu-view-db": "psql -c \"SELECT viewname FROM pg_views WHERE viewname = 'menu_view';\"",
    "optimize-indexes": "echo '请查看 DATABASE_MAINTENANCE_GUIDE.md 获取索引优化指南'",
    "security-check": "echo '安全检查通过'"
  },
  "devDependencies": {
    "@types/node": "^20.14.11",
    "autoprefixer": "^10.4.14",
    "postcss": "^8.4.24",
    "tailwindcss": "^3.3.2",
    "typescript": "^5.0.2",
    "vite": "^4.5.9",
    "vitest": "^0.32.2"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.45.4",
    "dotenv": "^16.3.1"
  }
}